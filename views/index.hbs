    <div class="login-box">
        <form class="bg-white p-4"
              action="/login"
              method="post"
              data-role="validator"
              data-clear-invalid="2000"
              data-on-error-form="invalidForm"
        >
            <img src="images/logos/E_Logo.png" class="place-right mt-4-minus mr-6-minus">
            <h1 class="mb-0"><img src="images/logos/logo.png" /></h1>
            <div class="text-muted mb-4">Jelentkezz be a folytatáshoz</div>
            <div class="form-group">
                <input type="email" name="email" data-role="input" placeholder="E-mail cím" data-append="<span class='mif-envelop'>" data-validate="required">
                <span class="invalid_feedback">Kérjük valós címet adjon meg</span>
            </div>
            <div class="form-group">
                <input type="password" name="password" data-role="input" placeholder="Jelszó" data-append="<span class='mif-key'>" data-validate="required">
                <span class="invalid_feedback">Kérjük adjon meg egy jelszót</span>
            </div>
            <div class="form-group d-flex flex-align-center flex-justify-between">
                <button class="button primary">Belépés</button>
            </div>
        </form>
    </div>
